{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "now-playing",
  "title": "Now Playing",
  "description": "Show the currently playing track and artist in the Raycast menu bar.",
  "icon": "command-icon-v2.png",
  "author": "tkdkid1000",
  "contributors": [
    "johnstclair",
    "ryanlauderbach",
    "jacperegrinedavies",
    "kendaniels"
  ],
  "categories": [
    "Media"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "now-playing-menubar",
      "title": "Now Playing Menu Bar Item",
      "description": "Show currently playing track and artist in the macOS menu bar.",
      "mode": "menu-bar",
      "preferences": [
        {
          "name": "menuBarTitleTemplate",
          "type": "textfield",
          "required": false,
          "title": "Menu Bar Title Template",
          "description": "Available variables: {track}, {artist}, {album}. Example: {track} — {artist}",
          "default": "{track} — {artist}"
        },
        {
          "name": "showAlbumArtwork",
          "type": "checkbox",
          "required": false,
          "title": "Show Album Artwork",
          "description": "Toggle album artwork visibility in the Raycast menu bar.",
          "label": "Show album artwork in menu bar",
          "default": true
        }
      ],
      "interval": "10s"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.103.0"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^2.0.4",
    "@types/node": "^22.18.6",
    "@types/react": "^19.0.10",
    "eslint": "^9.35.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  },
  "version": "1.0.0",
  "platforms": [
    "macOS",
    "Windows"
  ]
}
